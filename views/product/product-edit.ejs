<%- contentFor('title')%> ِAdd loyalty program <%-
contentFor('breadcrumb_title')%> Edit product <%- contentFor('breadcrumb_item')
%>
<li class="breadcrumb-item">Products</li>
<li class="breadcrumb-item">Edit Product</li>

<%- contentFor('body') %>
<!-- Container-fluid starts-->
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 ">
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-header">
              <h5>ِEdit Product</h5>
            </div>
            <div class="card-body">
              <form
                action="/api/v1/product/edit/<%= product._id %>"
                method="POST"
                class="form theme-form"
              >
                <h6>Product information</h6>

                <div class="form-group">
                  <label class="col-form-label">Title</label>
                  <input
                    name="title"
                    class="form-control"
                    type="text"
                    value="<%= product.title %> "
                    placeholder="Title"
                  />
                </div>
                <div class="form-group">
                  <label class="col-form-label">Arabic Title</label>
                  <input
                    name="title_ar"
                    class="form-control"
                    type="text"
                    placeholder="برنامج الولاء"
                    value="<%=product.title_ar  %> "
                  />
                </div>
                <div class="form-group">
                  <label class="col-form-label">Description</label>
                  <input
                    name="description"
                    class="form-control"
                    type="text"
                    placeholder="Free tea"
                    value="<%= product.description %> "
                  />
                </div>
                <div class="form-group">
                  <label class="col-form-label">Arabic Description</label>
                  <input
                    name="description_ar"
                    class="form-control"
                    type="text"
                    value="<%= product.description_ar %> "
                    placeholder="كوب قهوه مجاني"
                  />
                </div>
                <div class="form-group">
                  <label class="col-form-label">Image URL</label>
                  <input
                    name="imageUrl"
                    class="form-control"
                    type="text"
                    value="<%= product.imageUrl %> "
                    placeholder="Image Url"
                  />
                </div>
                <hr class="mt-4 mb-4" />
                <h6>Product data</h6>
            
                <div class="form-group">
                  <label class="col-form-label">Amount</label>
                  <input
                    name="amount"
                    class="form-control"
                    value="<%= product.amount %>"
                    type="number"
                    placeholder="10"
                  />
                </div>
                <div class="form-group">
                  <label class="col-form-label">Price</label>
                  <input
                    name="price"
                    id="points"
                    value="<%= product.price %>"
                    class="form-control"
                    type="number"
                    placeholder="50"
                  />
                </div>

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Container-fluid Ends-->
